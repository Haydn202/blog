@model ArticleViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>title</title>
</head>
<body>
<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="ArticleId" type="hidden"/>
        <div>
            <label>Title</label>
            <input asp-for="Title"/>
        </div>
        <div>
            <label>Author</label>
            <input asp-for="Author"/>
        </div>
        <div>
            <label>Description</label>
            <input asp-for="Description"/>
        </div>
        <div>
            <label>Topics</label>
            <input asp-for="Topics"/>
        </div>
        <div>
            <label>Thumbnail</label>
            <input asp-for="Thumbnail"/>
        </div>
        <input type="submit" value="Submit"/>
    </form>
</div>
</body>
</html>