@model ArticleViewModel

@{

}
<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.css" rel="stylesheet" />

<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="ArticleId" type="hidden"/>
        <div>
            <label>Title</label>
            <input asp-for="Title"/>
        </div>
        <div>
            <label>Author</label>
            <input asp-for="Author"/>
        </div>
        <div>
            <label>Description</label>
            <input asp-for="Description"/>
        </div>
        <div>
            <label>Topics</label>
            <input asp-for="Topics"/>
        </div>
       <div>
            <label>Tags</label>
            <input asp-for="Tags"/>
        </div>
        <div>
            <label>Thumbnail</label>
            <input asp-for="Thumbnail"/>
        </div>
        <div>
            <label>Content</label>
            <textarea id="editor" asp-for="Content"></textarea>
        </div>
        <input type="submit" value="Submit"/>
    </form>
</div>

@section Scripts {
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/trumbowyg.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
}